
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.BoardNo</td>
                <td><a href="/Board/Detail/@m.BoardNo">@m.BoardTitle</a></td>
                <td>@m.User.UserName</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (ViewBag.prev)
        {
            <li class="page-item">
                <a class="page-link" href="/Board?page=@((int)ViewBag.startPage-1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }

        @for (int i = (int)ViewBag.startPage; i < (int)ViewBag.endPage + 1; i++)
        {
            <li class="page-item"><a class="page-link" href="/Board?page=@i">@i</a></li>
        }
        @if (ViewBag.next)
        {
            <li class="page-item">
                <a class="page-link" href="/Board?page=@((int)ViewBag.endPage+1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }

    </ul>
</nav>


@Html.ActionLink("게시글 등록", "Add", "Board", null, new { @class = "btn btn-primary" })