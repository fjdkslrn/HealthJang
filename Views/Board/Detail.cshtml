@model HealthJang.Models.Board

@{
    ViewBag.Title = "Detail";
}
<style>
    #boardContents {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 6px 12px;
    }
</style>


<h2>Detail</h2>

<div class="form-horizontal">
    <div class="form-group">
        <!--@Html.LabelFor(m => m.BoardTitle)-->
        <label>제목</label>
        @Html.TextBoxFor(m => m.BoardTitle, new { @class = "form-control", style="background-color:white;" ,disabled = "disabled"})
    </div>

    <div class="form-group">
        <!--@Html.LabelFor(m => m.BoardContents)-->
        <label>내용</label>
        <div id="boardContents">@Html.Raw(@Model.BoardContents)</div>
    </div>

    <div class="form-group">
        @if (ViewBag.sessionUserNo == Model.UserNo)
        {
            <a href="/Board/Edit/@Model.BoardNo" class="btn btn-warning">게시글 수정</a>
            <form action="/Board/Delete" method="post" style="float:right;">
                <input type="hidden" name="id" value=@Model.BoardNo>
                <input type="submit" value="게시글 삭제" class="btn btn-danger">
            </form>
        }
        <a href="javascript:history.back();">뒤로가기</a>
    </div>

</div>