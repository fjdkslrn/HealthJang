@model HealthJang.Models.User
<!-- 아래 모델 람다식을 사용하기 위해 어떤 모델을 사용하는지 선언해줘야함 상단에 -->

@{
    ViewBag.Title = "Register";
}

<style>
    input{
        max-width: 280px;
    }
</style>

<h2>회원가입</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>ID</label>
            @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>이름</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>비밀번호</label>
            @Html.PasswordFor(m => m.UserPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">가입완료</button>
            @Html.ActionLink("뒤로가기", "Index", "Home")
        </div>
    </div>

}